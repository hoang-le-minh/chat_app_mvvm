<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_avt"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:src="@drawable/no_image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HỌ VÀ TÊN"
        android:fontFamily="@font/lato_regular"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintTop_toBottomOf="@+id/user_avt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/layout_24" />
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Username"
        android:hint="Username"
        android:layout_marginStart="@dimen/layout_20"
        android:layout_marginEnd="@dimen/layout_20"
        app:layout_constraintTop_toBottomOf="@id/txt_username"
        android:autofillHints="Username"
        android:inputType="textPersonName"
        android:labelFor="@+id/txt_username"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/lato_regular"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_username"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/layout_24"
        android:layout_marginTop="@dimen/layout_20"/>
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Email"
        android:hint="Email"
        android:layout_marginStart="@dimen/layout_20"
        android:layout_marginEnd="@dimen/layout_20"
        app:layout_constraintTop_toBottomOf="@id/txt_email"
        android:autofillHints="Email"
        android:inputType="textEmailAddress"
        android:labelFor="@+id/txt_email"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        android:layout_marginTop="@dimen/layout_20"
        android:background="@drawable/corner_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>
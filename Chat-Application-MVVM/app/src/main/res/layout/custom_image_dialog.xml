<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_view_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:src="@drawable/avt_default"
        android:scaleType="fitCenter"
        android:contentDescription="@string/not_exist" />

    <ImageButton
        android:id="@+id/btn_close_image_dialog"
        android:layout_width="@dimen/layout_32"
        android:layout_height="@dimen/layout_32"
        android:src="@drawable/ic_close_white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/layout_12"
        android:contentDescription="close" />
</androidx.constraintlayout.widget.ConstraintLayout>
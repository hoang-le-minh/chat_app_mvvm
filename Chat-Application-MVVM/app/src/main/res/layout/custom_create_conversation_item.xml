<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkbox_layout"
    android:padding="@dimen/layout_8">

    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/checkbox_create"
        android:layout_marginStart="@dimen/layout_8">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avt"
            android:layout_width="@dimen/layout_36"
            android:layout_height="@dimen/layout_36"
            android:src="@drawable/test_avt"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Le Minh Hoang"
            android:textSize="@dimen/text_18sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/layout_16"
            android:layout_toEndOf="@+id/user_avt"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/checkbox_create"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/layout_8"
        android:layout_marginStart="@dimen/layout_8"
        android:layout_marginTop="@dimen/layout_8"
        android:layout_marginEnd="@dimen/layout_8"
        android:layout_marginBottom="@dimen/layout_8"
        android:button="@null"
        android:checked="true"
        android:drawableStart="@drawable/circular_checkbox" />

</RelativeLayout>